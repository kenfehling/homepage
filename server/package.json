{
  "name": "server",
  "version": "1.0.0",
  "homepage": "http://kenfehling.com",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.25.0",
    "ejs-compiled-loader": "^1.1.0",
    "eslint": "^3.7.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.3.0",
    "isomorphic-style-loader": "^1.1.0",
    "nightwatch": "^0.9.14",
    "npm-run-all": "^4.0.2",
    "source-map-support": "^0.4.11",
    "svgo": "^0.7.2",
    "svgo-loader": "^1.2.1",
    "webpack": "^2.2.0",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.14.0",
    "nodemailer": "^4.0.1",
    "nodemailer-mailgun-transport": "^1.3.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "serve-static": "^1.12.1"
  },
  "scripts": {
    "clean": "rm -rf build/*",
    "build:client": "webpack --config prod.client.config.babel.js",
    "build:server": "webpack --config prod.server.config.babel.js",
    "build": "npm run clean; npm run build:client; npm run build:server; cp -r ../static/* build",
    "start": "node build/server",
    "stop": "kill $(pgrep -f 'node build/server')",
    "dev": "npm run build; npm start",
    "test:e2e": "./node_modules/nightwatch/bin/nightwatch",
    "test:once": "sleep 5; ps -A; npm run test:e2e; npm stop",
    "test": "node node_modules/npm-run-all/bin/run-p start test:once",
    "stats": "webpack --config prod.client.config.babel.js --profile --json > stats.json"
  }
}
