{
  "name": "server",
  "version": "1.0.0",
  "homepage": "http://kenfehling.com",
  "devDependencies": {
    "babel-core": "6.3.26",
    "babel-eslint": "7.1.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2017": "1.0.0",
    "babel-preset-react": "6.16.0",
    "chai": "3.5.0",
    "css-loader": "0.25.0",
    "ejs-compiled-loader": "1.1.0",
    "eslint": "3.7.1",
    "eslint-plugin-import": "2.2.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "favicons-webpack-plugin": "0.0.7",
    "html-webpack-plugin": "2.28.0",
    "image-webpack-loader": "7.0.1",
    "isomorphic-style-loader": "1.1.0",
    "mocha": "3.4.1",
    "postcss-loader": "1.3.3",
    "source-map-support": "0.4.11",
    "svgo": "^1.0.0",
    "svgo-loader": "1.2.1",
    "webpack": "2.2.0",
    "webpack-node-externals": "1.5.4"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "body-parser": "1.17.1",
    "compression": "1.6.2",
    "dotenv": "4.0.0",
    "ejs": "2.5.6",
    "express": "4.14.0",
    "lodash": "4.17.4",
    "mobile-detect": "1.3.6",
    "nodemailer": "4.0.1",
    "nodemailer-mailgun-transport": "1.3.4",
    "react": "15.5.4",
    "react-dom": "15.5.4",
    "serve-static": "1.12.1"
  },
  "scripts": {
    "clean": "rm -rf build; mkdir build",
    "build:client": "webpack --config prod.client.config.babel.js",
    "build:server": "webpack --config prod.server.config.babel.js",
    "build": "npm run clean; npm run build:client; npm run build:server; cp -r ../static/* build; cp src/index.js build",
    "start": "node build/index",
    "dev": "npm run build; npm start",
    "test:unit": "./node_modules/mocha/bin/mocha --compilers js:babel-core/register test/unit/*",
    "test:e2e": "node test/e2e/script.js",
    "test": "npm run test:unit; npm run test:e2e",
    "stats": "webpack --config prod.client.config.babel.js --profile --json > stats.json"
  }
}
