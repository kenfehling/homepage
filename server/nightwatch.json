{
  "src_folders": ["test/e2e/tests"],
  "output_folder": "test/e2e/reports",
  "custom_commands_path": "test/e2e/commands",
  "custom_assertions_path": "",
  "globals_path": "test/e2e/globals",

  "selenium": {
    "start_process": true,
    "server_path": "/opt/selenium/selenium-server-standalone.jar",
    "log_path": "test/e2e/reports",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "/opt/selenium/chromedriver-2.29"
    }
  },
  "test_settings": {
    "default": {
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": false,
      "desiredCapabilities": {
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "browserName": "chrome",
        "chromeOptions" : {
          "args" : ["headless", "no-sandbox","disable-gpu"]
        }
      }
    }
  }
}